<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:scrollbars="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sasankvh.wordgame.FindWord">

    <TextView
        android:id="@+id/WORD"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="38dp"
        android:text="WORD"
        />

    <TextView
        android:id="@+id/WordCorrect"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/WORD"
        android:layout_alignBottom="@+id/WORD"
        android:layout_centerHorizontal="true"
        android:text="Words Correct" />

    <TextView
        android:id="@+id/PositionCorrect"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/WordCorrect"
        android:layout_alignBottom="@+id/WordCorrect"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/WordCorrect"
        android:layout_toRightOf="@+id/WordCorrect"
        android:text="Position" />

    <ListView
        android:id="@+id/EnteredList"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/WORD" />

    <EditText
        android:id="@+id/CheckingWord"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/WORD"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/WORD"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textAlignment="center"/>

    <Button
        android:id="@+id/Check"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Check"
        android:onClick="onClick"/>

</RelativeLayout>
